<Page x:Class="Cliente.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cliente"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/login.jpg"/>
        </Grid.Background>
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="320" Margin="10,45,0,0" Stroke="Black" VerticalAlignment="Top" Width="290"/>
        <Button x:Name="botFinConex" Content="Ingresar" HorizontalAlignment="Left" Margin="106,240,0,0" VerticalAlignment="Top" Width="94" Click="BotLogin_Click"/>
        <TextBox x:Name="txtUsuario" TextAlignment="Center" HorizontalAlignment="Left"  Height="23" Margin="47,109,0,0" GotFocus="TxtUsuario_GotFocus" TextWrapping="Wrap" Text="Usuario" VerticalAlignment="Top" Width="218"/>
        <PasswordBox x:Name="txtContrasenna" KeyDown="txtContrasenna_KeyDown" HorizontalAlignment="Left" Height="23" Margin="47,175,0,0" GotFocus="TxtContrasenna_GotFocus" VerticalAlignment="Top" Width="218" />

    </Grid>

</Page>
